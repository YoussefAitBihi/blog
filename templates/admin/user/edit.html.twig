{% extends 'admin/base.html.twig' %}

{% block title %}
   Modification de l'utilisateur n°{{user.id}}
{% endblock %}

{% block body %}
   <div class="container my-3">
      <div class="row justify-content-center align-items-center">
         <div class="col-md-8 col-sm-12">
            <div class="border border-light p-3">
               <header class="text-center">
                  <img src="/uploads/picture/{{app.user.picture}}" alt="Picture de {{app.user.fullName}}" class="pic-rounded">
                  <h5>{{app.user.fullName}}</h5>
                  <p>Monsieur {{app.user.fullName}}, vous êtes en train de modifier l'utilisateur <i>{{user.fullName}}</i></p>
                  <p>Merci de modifier l'erreur</p>
               </header>
               <hr class="mt-3 mb-5">
               {{ form_start(form) }}
                  <div class="form-group row">
                     <!-- First Name -->
                     <div class="col">
                        {{form_widget(form.firstName)}}
                        {{form_errors(form.firstName)}}
                        {{form_help(form.firstName)}}
                        <small class="form-text text-muted text-center">Entre 3 et 20 caractères</small>
                     </div>
                     <!-- Last Name -->
                     <div class="col">
                        {{form_widget(form.lastName)}}
                        {{form_errors(form.lastName)}}
                        {{form_help(form.lastName)}}
                        <small class="form-text text-muted text-center">Entre 3 et 20 caractères</small>
                     </div>
                  </div>
                  <!-- Email -->
                  <div class="form-group">
                     {{form_widget(form.email)}}
                     {{form_errors(form.email)}}
                     {{form_help(form.email)}}
                     <small class="form-text text-muted text-center">Email valide</small>
                  </div>
                  <!-- Picture -->
                  <div class="form-group">
                     {{form_widget(form.picture)}}
                     {{form_errors(form.picture)}}
                     {{form_help(form.picture)}}
                     <small class="form-text text-muted text-center text-uppercase">jpg/jpeg | 2mb</small>
                  </div>
                  <!-- Description -->
                  <div class="form-group">
                     {{form_widget(form.description)}}
                     {{form_errors(form.description)}}
                     {{form_help(form.description)}}
                     <small class="form-text text-muted text-center">Au moins 1000 caractères</small>
                  </div>
                  <button class="btn btn-primary" type="submit">
                     <i class="fas fa-edit mr-2"></i>
                     Modifier
                  </button>
               {{form_end(form)}}
            </div>
         </div>
      </div>
   </div>
{% endblock %}
